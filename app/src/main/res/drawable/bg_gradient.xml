<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="100dp"
    android:height="100dp"
    android:viewportHeight="100"
    android:viewportWidth="100">

    <path
        android:pathData="M0,0 H100 V100 H0Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="50"
                android:startY="0"
                android:endX="50"
                android:endY="100">
                <item
                    android:color="#391E8A"
                    android:offset="0.0" />
                <item
                    android:color="#2B1767"
                    android:offset="0.7" />
                <item
                    android:color="#110829"
                    android:offset="1.0" />
            </gradient>
        </aapt:attr>

    </path>
</vector>

